* 
	box-sizing border-box
.container 
	margin 0 auto 
	max-width 960px 
	

.row 
	display flex 
	flex-wrap wrap
	
.col_1
	width calc(100%/12)
.col_2 
	width calc(100%/12*2)
.col_3
	width calc(100%/12*3)
.col_4
	width calc(100%/12*4)
.col_5
	width calc(100%/12*5)
.col_6 
	width calc(100%/12*6)
.col_7
	width calc(100%/12*7)
.col_8 
	width calc(100%/12*8)
.col_9 
	width calc(100%/12*9)
.col_10 
	width calc(100%/12*10)
.col_11
	width calc(100%/12*11)
.col_12 
	width 100%
.block 
	background blue 
	border 1px solid black
	height 60px
@media (max-width: 720px)
	.col_1,.col_2,.col_3,.col_4,.col_5,.col_6,.col_7,.col_8,.col_9,.col_10,.col_11,.col_12
		width 100%

