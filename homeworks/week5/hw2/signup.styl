* 
	box-sizing border-box
html 
	font-size 75%
	font-family: Montserrat,Arial,Helvetica,sans-serif;
p 
	margin 0
	font-size 1rem
	letter-spacing: 0.05rem;
	line-height: 1.5em;
h1,h2,h3
	font-weight 100
	margin 0
	padding 0
body 
	margin 0
input
	border 0px
	&:focus
		outline none	
.back
	width 100%
	height 100vh
	background url('picture/jonathan-bean-37632-unsplash.jpg')
	background-size cover
	position fixed
	z-index -10
	filter blur(5px)
.backContainer
	display flex 
	justify-content center
	align-items center
	width 100%
	height 100vh
	
.container
	background rgba(0, 0, 0 ,0.6)
	width 1200px
	height 350px
	border-radius 5px
	padding 70px 60px
	color white
	justify-content space-between
	display flex
	align-items center
	position relative  
.col 
	width 40%
	h1
		font-size 3rem
		margin 20px 0px
	p 
		font-size 1.2rem
.button 
	border 1px solid white 
	width 140px
	height 40px
	border-radius 8px
	text-align center
	line-height 40px
	font-size 1.3rem
	margin-top 30px
	&:hover
		cursor pointer
.switch
	background rgb(255,255,255)
	position absolute
	width  600px
	height 400px
	border-radius 4px
	box-shadow: 2px 1px 8px 2px rgba(0, 0, 0, 0.5)
.switch_content
	padding 80px 60px
	h1
		color #dc502f
		font-size 2.5rem
		margin-bottom 30px		
    input
	    width 100%
	    border-bottom 2px solid #c1c0c0fc
	    padding 12px 0px
	    color #c1c0c0fc
	    font-size 1.3rem
.logIn
	display none
.submit
	width 140px
	height 40px
	border-radius 8px
	text-align center
	margin-top 30px
	color white
	background #dc502f
	margin-left 300px
input[type="submit"]
	cursor pointer