
*
	box-sizing border-box
body 
	padding-top 100px
	font-family Microsoft JhengHei,Arial,Helvetica,sans-serif
	font-weight 300
	background #00324e
h1,h2
	margin 0
	font-weight normal
.navbar
	width 100%
	height 65px
	background #006aa6
	position fixed
	top 0
	display flex 
	align-items center
	color white
	z-index 10
.logo
	margin-left 5%
	font-family 'PT Sans', Arial,Helvetica,sans-serif
.navList 
	margin-left 70%
	display inline-flex 
	height inherit
.navButton
	width 60px
	height inherit
	text-align center
	line-height 65px
.container 
	width 720px
	background white
	margin 0 auto 
	padding 35px 35px
	border-radius 5px
.mainComment_container
	padding-bottom 20px
	border-bottom 1px solid #dedede
	
.mainComment 
	width 100% 
	height 100px 
	border 1px solid gray
	border-radius 5px
.row 
	width 100%
.col
	width 100%
	border-bottom 1px solid #dedede
	padding 10px 0px
.inf
	width 100%
	display inline-flex 
	justify-content space-between
	p 
		line-height 0.3rem
	.time 
		color #797979
.replyContainer
	width 90%
	margin-left 10%
	position relative
	padding-bottom 30px
	
.replyCol
	background #96d1f3
	border-radius 10px
	padding 5px
	margin-bottom 10px
.replyButton
	cursor pointer
	position absolute
	right 20px
	bottom 10px
.replyFormContainer
	display none
.whoComment
	font-weight bold